input, textarea {
  border: 1px solid black;
}

.container {
  display: flex;
  flex-direction: column;
}

view.title input {
  width: 170px;
}

view.description, view.title, view.deadline, view.urgencyDegree {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 10px;
}

view.deadline view.pickerTime {
  margin-left: 10px;
}

view.chooseToPerform button {
  width: 150px;
  margin-top: 10px;
}

view.chooseToPerform .performer {
  margin: 0 auto;
  border: 1px solid black;
  margin-top: 10px;
  width: 600rpx;    
  height: 150px;
  overflow: scroll
}

view.description textarea {
  width: 170px;
}

view.launch button {
  width: 220px;
  margin: 0 auto;
  margin-top: 20px;
}
.alarming{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 16px;
}
.alarmImage{
  width: 16px;
  height: 16px;
}
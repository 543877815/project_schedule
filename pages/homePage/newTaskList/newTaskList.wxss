.container {
  margin-top: 10px;
  display: flex;
  flex-direction: column;
}

.header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-top: 1px solid black;
  border-bottom: 1px solid black;
  margin-bottom: 30px;
  align-items: center;
}

.header image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 10px 0 10px 20px;
}

.header text {
  font-weight: bold;
  font-size: 24px;
  margin-right: 20px;
}

.taskList {
  display: flex;
  flex-direction: column;
}

.taskList .taskBlock {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-bottom: 20px;
}

.taskList .taskBlock view {
  width: 100px;
  height: 100px;
  border: 1px solid black;
  text-align: center;
  display: table;
}

.taskList .taskBlock view text {
  vertical-align: middle;
  display: table-cell;
}

.header {
  text-align: right;
  padding-top: 20px;
  padding-bottom: 20px;
  margin-top: 10px;
  padding-right: 5px;
  font-size: 24px;
  font-weight: bold;
  border-bottom: 1px solid black;
  border-top: 1px solid black;
}

.groupList {
  display: flex;
  flex-direction: column;
  margin-top: 5px;
  border-top: 1px solid black; 
}

.groupList .group {
  font-size: 24px;
  font-weight: bold;
  line-height: 68px;
  border-bottom: 1px solid black;
}
.groupList .group .groupName{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-left:5px;
  align-items: center
}
.groupList .group .memberList {
  font-size: 20px;
  border-top: 2px solid black;
  line-height: 20px;
}

.hide {
  display: none;
  
}

.active {
  display: flex;
  flex-direction: column;
}

.groupList .group .memberList .member {
  padding-top: 7px;
  padding-bottom: 5px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  border-bottom: 1px solid gray;
}
.groupList .group .groupName image{
  height: 30px;
  width: 30px;
  margin-right: 5px;
}
.groupList .group .memberList .member .name{
  margin-left: 5px;
}

.groupList .group .memberList .member .icon image {
  height: 20px;
  width: 20px;
  margin-right: 10px;
}

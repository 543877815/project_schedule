.container{
  display: flex;
  flex-direction: column;
}

.personalInfo{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  padding-bottom: 20px;
  border-bottom: 1px solid black
}

.personalInfo .personalAvatar{
  flex: 1;
}
.personalInfo image.avatarimage{
  width: 150px;
  height: 150px;
  border-radius: 50%;
}
.personalInfo .personalDetailInfo{
  flex: 2;
  display: flex;
  flex-direction: column;
  margin-left: 20px;
  font-weight: bold;
}

.functionList{
  display: flex;
  flex-direction: column;
  text-align: center
}
.functionList view{
  height: 60px;
  line-height: 60px;
  border-bottom: 1px solid black
}
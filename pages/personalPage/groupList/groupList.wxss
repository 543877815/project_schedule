.container{
  display: flex;
  flex-direction: column;
  
}
.header{
  text-align: right;
  font-size: 28px;
  font-weight: bold;
  border-top: 1px solid black;
  border-bottom: 1px solid black;
  margin-top: 10px;
  padding: 20px;
}
.groupList{
  display: flex;
  flex-direction: column;
}
.groupList .group{
  text-align: center;
  padding: 15px;
  margin-top: 8px;
  font-size: 24px;
  border-top: 1px solid black;
  border-bottom: 1px solid black
}
.groupList .group button{
  margin: 0;
}
.group{
  display: flex;
  flex-direction: row;
  justify-content: space-between
}
.header {
  margin-top: 10px;
  border-top: 1px solid gray;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 20px;
  padding-bottom: 20px;
}

.header image.avatar {
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  margin-bottom: 10px;
}

view.contain {
  display: flex;
  flex-direction: column;
  border-top: 1px solid grey;
  margin-top: 10px;
  padding-top: 20px;
}

.nickName, .unit, .department, .studentNumber {
  display: flex;
  flex-direction: row;
  font-weight: bold;
  width: 550rpx;
  margin: 0 auto;
  justify-content: flex-end;
  margin-top: 10px;
  font-size: 16px;
}
.nickName text, .unit text, .department text, .studentNumber text{
  margin-right: 5px;
}

.footer{
  position: absolute;
  bottom: 0;
  text-align: center;
  border-top: 1px solid black;
  padding-top: 10px;
  padding-bottom: 5px;
  width: 750rpx;
  font-size: 28px;
  font-weight: bold;
}
.footer text{
  font-size: 16px;
  font-weight: bold;
  color: red;
}
